<Window x:Class="myNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myNotes"
        mc:Ignorable="d"
        Title="MainWindow" Height="467.259" Width="692.005">
    <Window.Resources>
        <Style TargetType="Label" x:Key="Title">
            <Setter Property="FontFamily" Value="pack://application:,,,/myNotes;Fonts/#Roboto" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Window.Resources>
    <Grid>
        <Label x:Name="label" Style="{DynamicResource Title}" Content="Mes notes" VerticalAlignment="Top" Panel.ZIndex="1" Height="40" HorizontalAlignment="Left" Width="151"/>
        <Rectangle Fill="#FFF4F4F5" Stroke="Black" Margin="0,0,533,0"/>
    </Grid>
</Window>
